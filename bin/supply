#!/usr/bin/env bash

echo "-----> VulsBuildpack/supply"

BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX=$4

STAGING_DIR=$DEPS_DIR/$INDEX

SCRON_VERSION=${SCRON_VERSION:-0.1.11}
SCRON_URL=${SCRON_URL:-https://github.com/aptible/supercronic/releases/download/v${SCRON_VERSION}/supercronic-linux-amd64}
SCRON_SHA1SUM=a2e2d47078a8dafc5949491e5ea7267cc721d67c
SCRON_CRONTAB=${SCRON_CRONTAB:-${STAGING_DIR}/dist/crontab}
SCRON_CRONTAB_CMD=${SCRON_CRONTAB_CMD:-"5 6 * * * /home/vcap/app/.profile.d/00-run-scan.sh"}

VULS_VERSION=${VULS_VERSION:-0.11.0}
VULS_URL="${VULS_URL:-https://github.com/future-architect/vuls/releases/download/v${VULS_VERSION}/vuls_${VULS_VERSION}_linux_amd64.tar.gz}"


echo "Installing the vuls to ${STAGING_DIR}"

mkdir -p $STAGING_DIR
mkdir -p $STAGING_DIR
mkdir -p $BUILD_DIR/.profile.d

cp -r $ROOT_DIR/lib/dist $STAGING_DIR/

echo "Download superchronic asset from ${SCRON_URL}"
DOWNLOAD_PATH=$STAGING_DIR/supercronic

curl -L -o $DOWNLOAD_PATH $SCRON_URL

echo "${SCRON_SHA1SUM}  ${DOWNLOAD_PATH}" | sha1sum -c

chmod +x $DOWNLOAD_PATH

ln -s $DOWNLOAD_PATH $BUILD_DIR/superchronic

echo "Download vuls asset from ${VULS_URL}"
DOWNLOAD_PATH=$STAGING_DIR/vuls.tar.gz

curl -L -o $DOWNLOAD_PATH $VULS_URL

tar -C $STAGING_DIR -xf $DOWNLOAD_PATH vuls

if [ -f $ROOT_DIR/lib/vuls ]; then
  cp $ROOT_DIR/lib/vuls $BUILD_DIR/vuls
  chmod +x $STAGING_DIR/vuls
fi

rm -rf $DOWNLOAD_PATH

cp $ROOT_DIR/lib/run-scan.sh $BUILD_DIR/.profile.d/00-run-scan.sh
sed -i "s/##INDEX##/${INDEX}/" $BUILD_DIR/.profile.d/00-run-scan.sh

chmod +x $BUILD_DIR/.profile.d/00-run-scan.sh

echo "Configuring crontab"
echo "${SCRON_CRONTAB_CMD}" >>  $SCRON_CRONTAB
